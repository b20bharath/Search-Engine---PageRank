  <ol class="menu" vocab="https://schema.org/" typeof="BreadcrumbList">

  
          <li property="itemListElement" typeof="ListItem"><a property="item" typeof="WebPage" href="https://honors.uic.edu"><span property="name">Honors College</span></a>
        <meta property="position" content="0">
