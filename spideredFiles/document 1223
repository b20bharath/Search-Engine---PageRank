          <div class="main_content">
            <h1 id="page-title">
              Partner / Internships            </h1>
              <div id="block-system-main" class="block block-system">
    
  <div class="content">
    <article id="node-17" class="node node-text-page clearfix" about="/partner-internships" typeof="sioc:Item foaf:Document" role="article">



  <div class="node-content content">


    <div class="field-collection-container clearfix">
<div class="field field-name-field-content-block field-type-field-collection field-label-hidden">
    <div class="field-items">
          <div class="field-item even"><div class="field-collection-view clearfix view-mode-full field-collection-view-final"><div class="entity entity-field-collection-item field-collection-item-field-content-block clearfix" about="/field-collection/field-content-block/18" typeof="">
  <div class="content">
    <div class="title-slider">
<div class="field field-name-field-heading-images field-type-image field-label-hidden">
    <div class="field-items">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false">


